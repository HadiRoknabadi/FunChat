@if (
TempData["ToastSuccessMessage"] != null ||
TempData["ToastErrorMessage"] != null ||
TempData["ToastWarningMessage"] != null ||
TempData["ToastInfoMessage"] != null ||
TempData["SweetAlertSuccessMessage"] != null ||
TempData["SweetAlertWarningMessage"] != null ||
TempData["SweetAlertErrorMessage"] != null ||
TempData["SweetAlertInfoMessage"] != null 
)
{
    if (TempData["ToastSuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowToastMessageNotification('پیغام موفقیت', '@TempData["ToastSuccessMessage"]', 'success');
            });
        </script>
    }

    if (TempData["ToastErrorMessage"] != null)
    {
        @* var errorMessages=TempData["ToastErrorMessage"] as List<string>; *@
        <script>
            $(document).ready(function () {
               
                ShowToastMessageNotification('پیغام خطا', decodeURI(@TempData["ToastErrorMessage"]), 'error');
            });
        </script>
    }

    if (TempData["ToastWarningMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowToastMessageNotification('پیغام اخطار', '@TempData["ToastWarningMessage"]', 'warning');
            });
        </script>
    }

    if (TempData["ToastInfoMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                ShowToastMessageNotification('پیغام اطلاعیه', '@TempData["ToastInfoMessage"]', 'info');
            });
        </script>
    }

    if(TempData["SweetAlertSuccessMessage"]!=null)
    {
            <script>
            $(document).ready(function () {
                ShowSweetAlertNotification('پیغام موفقیت', '@TempData["SweetAlertSuccessMessage"]', 'success')
            });
        </script>
    }

    if(TempData["SweetAlertWarningMessage"]!=null)
    {
            <script>
            $(document).ready(function () {
                ShowSweetAlertNotification('پیغام اخطار', '@TempData["SweetAlertWarningMessage"]', 'warning')
            });
        </script>
    }

    if(TempData["SweetAlertErrorMessage"]!=null)
    {
            <script>
            $(document).ready(function () {
                ShowSweetAlertNotification('پیغام خطا', '@TempData["SweetAlertErrorMessage"]', 'error')
            });
        </script>
    }

    if(TempData["SweetAlertInfoMessage"]!=null)
    {
            <script>
            $(document).ready(function () {
                ShowSweetAlertNotification('پیغام اطلاعیه', '@TempData["SweetAlertInfoMessage"]', 'info')
            });
        </script>
    }
}

