@model FunChat.Application.DTOs.Account.LoginUserDTO
@{
    ViewData["Title"] = "ورود";
}

<form asp-controller="Account" asp-action="login" method="post">
    <div class="row g-3">
        <div class="col-3">
            <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row g-3 mt-3">
        <div class="col-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <label for="exampleCheck1">مرا به خاطر بسپار</label>
        <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="RememberMe">
    </div>



    <div class="row g-3 mt-3">
        <div class="col-3">
            <button class="btn btn-success " type="submit">ورود</button>
        </div>

    </div>

</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}