@model FunChat.Application.DTOs.Account.ChangeUserPasswordDTO
@using FunChat.WebApplication.PresentationExtensions
@{
    ViewData["Title"] = "تغییر رمز عبور";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";

}

<div class="row">
    <partial name="_UserSidebar" />

    <div class="col-8">
        <form asp-area="User" asp-controller="Account" asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="UserId" value="@User.GetUserId()">
            <div class="row g-3 mt-3">
                <div class="col-3">
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="رمز عبور فعلی">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>
            <div class="row g-3 mt-3">
                <div class="col-3">
                    <button class="btn btn-success " type="submit">ثبت</button>
                </div>

            </div>

        </form>

    </div>
</div>




@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}