@model FunChat.Application.DTOs.Account.EditUserProfileDTO
@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="row">
    <partial name="_UserSidebar" />


    <div class="col-8">
       
            <form asp-area="User" asp-controller="Account" asp-action="EditUserProfile" method="post">
                <div class="row g-3">
                    <div class="col-3">
                        <input asp-for="FullName" type="text" class="form-control" placeholder="نام و نام خانوادگی">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col-3">
                        <label for="userAvatar" class="btn-primary rounded py-2 px-2" style="cursor: pointer;">انتخاب عکس</label>
                        <input asp-for="UserAvatar" type="file" id="userAvatar" class="d-none">

                    </div>
                </div>

                 <div class="row g-3 mt-3">
        <div class="col-3">
            <button class="btn btn-success " type="submit">ثبت</button>
        </div>
        
    </div>
            </form>
        
    </div>
</div>



</div>
